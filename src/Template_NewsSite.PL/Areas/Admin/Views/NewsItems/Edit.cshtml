@model NewsItem
@{
    string strTitle = "Edit";
    ViewBag.Title = strTitle;
}

<script src="~/js/ckeditor/ckeditor.js"></script>

<div>
    <h2>@strTitle</h2>

    <div>
        <form asp-area="Admin" asp-controller="NewsItems" asp-action="Edit" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="All"></div>

            <input asp-for="Id" type="hidden" />
            <input asp-for="DateAdded" type="hidden" />
            <input asp-for="TitleImagePath" type="hidden" />

            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="div-box">
                <label asp-for="Subtitle"></label>
                <textarea asp-for="Subtitle"></textarea>
                <span asp-validation-for="Subtitle"></span>
            </div>
            <div class="div-box">
                <label asp-for="Text"></label>
                <textarea asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <div class="div-box">
                <label asp-for="TitleImagePath"></label>

                <input type="file" name="titleImgFile" id="titleImgFile" />
                <span asp-validation-for="MetaDescription"></span>
                <div>
                    <img class="img-block" src="~/images/@Model.TitleImagePath" />
                </div>
            </div>
            <div class="div-box">
                <label asp-for="MetaTitle"></label>
                <input asp-for="MetaTitle" />
                <span asp-validation-for="MetaTitle"></span>
            </div>
            <div class="div-box">
                <label asp-for="MetaDescription"></label>
                <input asp-for="MetaDescription" />
                <span asp-validation-for="MetaDescription"></span>
            </div>
            <div class="div-box">
                <label asp-for="MetaKeywords"></label>
                <input asp-for="MetaKeywords" />
                <span asp-validation-for="MetaKeywords"></span>
            </div>

            <input type="submit" value="Save" />
        </form>
    </div>
</div>

<script>
    window.onload = function () {
        var newCKEditor = CKEDITOR.replace('@Html.IdFor(x=>x.Text)');
        newCKEditor.updateElement();
    }
</script>