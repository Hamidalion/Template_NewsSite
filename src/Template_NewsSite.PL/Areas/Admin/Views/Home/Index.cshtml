@model IQueryable<NewsItem>

@{ 
    string strTitle = "AdministrationDashboard";
    ViewBag.Title = strTitle;
}

<div>
    <div>
        <h2>@strTitle</h2>
        <div class="div-box">
            <h3>Edit news item</h3>
            <a asp-area="Admin" asp-controller="NewsItems" asp-action="Edit" asp-route-id="">Add</a>
        </div>
        @if (Model.Any())
        {
            <div>
                @foreach (var entity in Model)
                {
                    <div>
                        <a asp-area="Admin" asp-controller="NewsItems" asp-action="Edit" asp-route-id="@entity.Id">Edit</a>
                        |
                        <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="NewsItems" asp-action="Delete">
                            <input type="hidden" name="id" value="@entity.Id" />
                            <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">Delete</a>
                        </form>
                        |
                        <a asp-area="" asp-controller="NewsItems" asp-action="Index" asp-route-id="@entity.Id"> News item - @($"{entity.Title}") </a>
                    </div>
                }
            </div>
        }
    </div>
    
    <div class="div-box">
        <h3>Edit site pages</h3>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageIndex">Main</a>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageNews">News</a>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageContacts">Contacts</a>
    </div>
    
    <div class="div-box">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Exit" />
        </form>
    </div>
</div>